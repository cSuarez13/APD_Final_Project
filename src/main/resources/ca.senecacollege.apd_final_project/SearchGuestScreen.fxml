<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" styleClass="root"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ca.senecacollege.apd_final_project.controller.admin.SearchGuestController">
    <top>
        <VBox spacing="10.0" styleClass="card">
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
            </padding>
            <children>
                <Label styleClass="label-header" text="Search Guests">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                </Label>
                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <children>
                        <Label text="Search by:">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Label>
                        <ComboBox fx:id="cmbSearchBy" prefWidth="120.0"/>

                        <Label text="Search term:" style="-fx-padding-left: 20;">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="txtSearchTerm" prefWidth="300.0" promptText="Enter search term"/>

                        <Button fx:id="btnSearch" defaultButton="true" mnemonicParsing="false" onAction="#handleSearchAction"
                                styleClass="button" text="Search">
                            <HBox.margin>
                                <Insets left="20.0"/>
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>

    <center>
        <HBox spacing="10.0" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <children>
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label styleClass="label-subheader" text="Guest Results">
                            <font>
                                <Font name="System Bold" size="16.0"/>
                            </font>
                        </Label>
                        <TableView fx:id="tblGuests" VBox.vgrow="ALWAYS"/>
                    </children>
                </VBox>

                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label styleClass="label-subheader" text="Guest Reservations">
                            <font>
                                <Font name="System Bold" size="16.0"/>
                            </font>
                        </Label>
                        <TableView fx:id="tblReservations" VBox.vgrow="ALWAYS"/>
                    </children>
                </VBox>
            </children>
        </HBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" styleClass="bg-dark">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <children>
                <HBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <Button fx:id="btnViewDetails" mnemonicParsing="false" onAction="#handleViewDetailsAction"
                            styleClass="button-secondary" text="View Details" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                    <Button fx:id="btnNewReservation" mnemonicParsing="false" onAction="#handleNewReservationAction"
                            styleClass="button-secondary" text="New Reservation" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                    <Button fx:id="btnCheckIn" mnemonicParsing="false" onAction="#handleCheckInAction"
                            styleClass="button-secondary" text="Check In" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                    <Button fx:id="btnCheckOut" mnemonicParsing="false" onAction="#handleCheckOutAction"
                            styleClass="button-secondary" text="Check Out" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                    <Button fx:id="btnCancel" cancelButton="true" mnemonicParsing="false" onAction="#handleCancelAction"
                            styleClass="button-secondary" text="Cancel" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                </HBox>
            </children>
        </HBox>
    </bottom>
</BorderPane>