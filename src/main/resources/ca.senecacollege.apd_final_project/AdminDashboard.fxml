<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainPane" prefHeight="768.0" prefWidth="1024.0" styleClass="root"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ca.senecacollege.apd_final_project.controller.admin.AdminDashboardController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="admin-header">
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
            </padding>
            <children>
                <Label styleClass="label-header" text="Hotel ABC Administration">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="lblAdminName" styleClass="label-secondary" text="Admin Name">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <Button mnemonicParsing="false" onAction="#handleLogout" styleClass="button" text="Logout"/>
            </children>
        </HBox>
    </top>

    <left>
        <VBox styleClass="side-nav" prefWidth="200.0">
            <children>
                <Button fx:id="btnDashboard" text="Dashboard" styleClass="nav-button,nav-button-active"
                        onAction="#handleNavigation" maxWidth="Infinity" prefHeight="60.0"/>
                <Button fx:id="btnSearchGuests" text="Search Guests" styleClass="nav-button"
                        onAction="#handleNavigation" maxWidth="Infinity" prefHeight="60.0"/>
                <Button fx:id="btnReservations" text="Reservations" styleClass="nav-button"
                        onAction="#handleNavigation" maxWidth="Infinity" prefHeight="60.0"/>
                <Button fx:id="btnCheckIn" text="Check-in" styleClass="nav-button"
                        onAction="#handleNavigation" maxWidth="Infinity" prefHeight="60.0"/>
                <Button fx:id="btnCheckOut" text="Check-out" styleClass="nav-button"
                        onAction="#handleNavigation" maxWidth="Infinity" prefHeight="60.0"/>
                <Button fx:id="btnReports" text="Reports" styleClass="nav-button"
                        onAction="#handleNavigation" maxWidth="Infinity" prefHeight="60.0"/>
            </children>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea">
            <!-- Content panes will be switched here -->
            <children>
                <!-- Dashboard View -->
                <VBox fx:id="dashboardView" spacing="20.0" styleClass="content-area">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </padding>
                    <children>
                        <HBox spacing="20.0">
                            <children>
                                <VBox styleClass="stat-card" HBox.hgrow="ALWAYS">
                                    <padding>
                                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                                    </padding>
                                    <children>
                                        <Label styleClass="card-header" text="Today's Check-ins"/>
                                        <Label fx:id="lblTodayCheckIns" styleClass="stat-number" text="0">
                                            <font>
                                                <Font size="36.0"/>
                                            </font>
                                        </Label>
                                    </children>
                                </VBox>
                                <VBox styleClass="stat-card" HBox.hgrow="ALWAYS">
                                    <padding>
                                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                                    </padding>
                                    <children>
                                        <Label styleClass="card-header" text="Today's Check-outs"/>
                                        <Label fx:id="lblTodayCheckOuts" styleClass="stat-number" text="0">
                                            <font>
                                                <Font size="36.0"/>
                                            </font>
                                        </Label>
                                    </children>
                                </VBox>
                                <VBox styleClass="stat-card" HBox.hgrow="ALWAYS">
                                    <padding>
                                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                                    </padding>
                                    <children>
                                        <Label styleClass="card-header" text="Active Reservations"/>
                                        <Label fx:id="lblActiveReservations" styleClass="stat-number" text="0">
                                            <font>
                                                <Font size="36.0"/>
                                            </font>
                                        </Label>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                        <HBox spacing="20.0" VBox.vgrow="ALWAYS">
                            <children>
                                <VBox styleClass="data-card" HBox.hgrow="ALWAYS">
                                    <padding>
                                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                                    </padding>
                                    <children>
                                        <Label styleClass="card-header" text="Today's Check-ins"/>
                                        <TableView fx:id="tblTodayCheckIns" VBox.vgrow="ALWAYS" styleClass="admin-table"/>
                                    </children>
                                </VBox>
                                <VBox styleClass="data-card" HBox.hgrow="ALWAYS">
                                    <padding>
                                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                                    </padding>
                                    <children>
                                        <Label styleClass="card-header" text="Today's Check-outs"/>
                                        <TableView fx:id="tblTodayCheckOuts" VBox.vgrow="ALWAYS" styleClass="admin-table"/>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </children>
                </VBox>

            </children>
        </StackPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="10.0" styleClass="admin-footer">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <children>
                <Label styleClass="label-secondary" text="Â© 2025 Hotel ABC. All Rights Reserved."/>
            </children>
        </HBox>
    </bottom>
</BorderPane>