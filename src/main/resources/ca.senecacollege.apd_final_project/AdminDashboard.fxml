<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainPane" prefHeight="768.0" prefWidth="1024.0" styleClass="root"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ca.senecacollege.apd_final_project.controller.admin.AdminDashboardController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="header">
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
            </padding>
            <children>
                <Label styleClass="label-header" text="Hotel ABC Administration">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <VBox alignment="CENTER_RIGHT">
                    <children>
                        <Label fx:id="lblAdminName" styleClass="label-secondary" text="Admin Name">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Label>
                        <Label fx:id="lblAdminRole" styleClass="label-secondary" text="Role">
                            <font>
                                <Font size="12.0"/>
                            </font>
                        </Label>
                    </children>
                </VBox>
                <Button mnemonicParsing="false" onAction="#handleLogout" styleClass="button-secondary" text="Logout"/>
            </children>
        </HBox>
    </top>
    <center>
        <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
            <tabs>
                <!-- Dashboard Tab -->
                <Tab fx:id="tabDashboard" text="Dashboard">
                    <content>
                        <ScrollPane fitToHeight="true" fitToWidth="true">
                            <content>
                                <VBox spacing="20.0">
                                    <padding>
                                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                                    </padding>
                                    <children>
                                        <HBox spacing="20.0">
                                            <children>
                                                <VBox styleClass="card" HBox.hgrow="ALWAYS">
                                                    <padding>
                                                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                                                    </padding>
                                                    <children>
                                                        <Label styleClass="card-header" text="Today's Check-ins"/>
                                                        <Label fx:id="lblTodayCheckIns" styleClass="stat-number" text="0">
                                                            <font>
                                                                <Font size="36.0"/>
                                                            </font>
                                                        </Label>
                                                    </children>
                                                </VBox>
                                                <VBox styleClass="card" HBox.hgrow="ALWAYS">
                                                    <padding>
                                                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                                                    </padding>
                                                    <children>
                                                        <Label styleClass="card-header" text="Today's Check-outs"/>
                                                        <Label fx:id="lblTodayCheckOuts" styleClass="stat-number" text="0">
                                                            <font>
                                                                <Font size="36.0"/>
                                                            </font>
                                                        </Label>
                                                    </children>
                                                </VBox>
                                                <VBox styleClass="card" HBox.hgrow="ALWAYS">
                                                    <padding>
                                                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                                                    </padding>
                                                    <children>
                                                        <Label styleClass="card-header" text="Active Reservations"/>
                                                        <Label fx:id="lblActiveReservations" styleClass="stat-number" text="0">
                                                            <font>
                                                                <Font size="36.0"/>
                                                            </font>
                                                        </Label>
                                                    </children>
                                                </VBox>
                                            </children>
                                        </HBox>
                                        <VBox styleClass="card">
                                            <padding>
                                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                                            </padding>
                                            <children>
                                                <Label styleClass="card-header" text="Today's Check-ins"/>
                                                <TableView fx:id="tblTodayCheckIns" prefHeight="200.0" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS"/>
                                            </children>

                                        </VBox>
                                        <VBox styleClass="card">
                                            <padding>
                                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                                            </padding>
                                            <children>
                                                <Label styleClass="card-header" text="Today's Check-outs"/>
                                                <TableView fx:id="tblTodayCheckOuts" prefHeight="200.0" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS"/>
                                            </children>

                                        </VBox>
                                    </children>
                                </VBox>
                            </content>
                        </ScrollPane>
                    </content>
                </Tab>

                <!-- Search Tab -->
                <Tab fx:id="tabSearch" text="Search Guests">
                    <content>
                        <BorderPane>
                            <top>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <padding>
                                        <Insets bottom="10.0" left="20.0" right="20.0" top="20.0"/>
                                    </padding>
                                    <children>
                                        <Label text="Search by:"/>
                                        <ComboBox fx:id="cmbSearchType" prefWidth="120.0"/>
                                        <TextField fx:id="txtSearchTerm" prefWidth="300.0" promptText="Enter search term"/>
                                        <Button mnemonicParsing="false" onAction="#handleSearch" styleClass="button" text="Search"/>
                                    </children>
                                </HBox>
                            </top>
                            <center>
                                <SplitPane dividerPositions="0.5" prefHeight="160.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                                    <items>
                                        <VBox>
                                            <padding>
                                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                            </padding>
                                            <children>
                                                <Label styleClass="label-subheader" text="Search Results"/>
                                                <TableView fx:id="tblSearchResults" VBox.vgrow="ALWAYS"/>
                                            </children>
                                        </VBox>
                                        <VBox>
                                            <padding>
                                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                            </padding>
                                            <children>
                                                <Label styleClass="label-subheader" text="Reservations"/>
                                                <TableView fx:id="tblGuestReservations" VBox.vgrow="ALWAYS"/>
                                            </children>
                                        </VBox>
                                    </items>
                                </SplitPane>
                            </center>
                        </BorderPane>
                    </content>
                </Tab>

                <!-- Reservations Tab -->
                <Tab fx:id="tabReservations" text="Reservations">
                    <content>
                        <BorderPane>
                            <top>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <padding>
                                        <Insets bottom="10.0" left="20.0" right="20.0" top="20.0"/>
                                    </padding>
                                    <children>
                                        <Label text="Filter:"/>
                                        <ComboBox fx:id="cmbReservationFilter" prefWidth="150.0"/>
                                        <Region HBox.hgrow="ALWAYS"/>
                                        <Button fx:id="btnCancelReservation" mnemonicParsing="false" onAction="#handleCancelReservation" styleClass="button-danger" text="Cancel Selected Reservation"/>
                                    </children>
                                </HBox>
                            </top>
                            <center>
                                <TableView fx:id="tblAllReservations" BorderPane.alignment="CENTER">
                                    <padding>
                                        <Insets bottom="20.0" left="20.0" right="20.0" top="10.0"/>
                                    </padding>
                                </TableView>
                            </center>
                        </BorderPane>
                    </content>
                </Tab>

                <!-- Check-in Tab -->
                <Tab fx:id="tabCheckIn" text="Check-in">
                    <content>
                        <ScrollPane fitToHeight="true" fitToWidth="true">
                            <content>
                                <VBox spacing="20.0">
                                    <padding>
                                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                                    </padding>
                                    <children>
                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                            <children>
                                                <Label text="Reservation ID:"/>
                                                <TextField fx:id="txtCheckInReservationId" prefWidth="150.0"/>
                                                <Button fx:id="btnSearchCheckIn" mnemonicParsing="false" onAction="#handleSearchCheckIn" styleClass="button" text="Search"/>
                                            </children>
                                        </HBox>
                                        <VBox styleClass="card">
                                            <padding>
                                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                                            </padding>
                                            <children>
                                                <Label styleClass="card-header" text="Reservation Details"/>
                                                <GridPane hgap="20.0" vgap="10.0">
                                                    <columnConstraints>
                                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="100.0" prefWidth="150.0"/>
                                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="400.0"/>
                                                    </columnConstraints>
                                                    <rowConstraints>
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                                    </rowConstraints>
                                                    <children>
                                                        <Label text="Guest Name:"/>
                                                        <Label text="Check-in/out:" GridPane.rowIndex="1"/>
                                                        <Label text="Room:" GridPane.rowIndex="2"/>
                                                        <Label fx:id="lblCheckInGuestName" GridPane.columnIndex="1"/>
                                                        <Label fx:id="lblCheckInDates" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                                        <Label fx:id="lblCheckInRoomInfo" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                                    </children>
                                                    <VBox.margin>
                                                        <Insets bottom="20.0" top="20.0"/>
                                                    </VBox.margin>
                                                </GridPane>
                                                <Button fx:id="btnConfirmCheckIn" defaultButton="true" disable="true" mnemonicParsing="false" onAction="#handleConfirmCheckIn" styleClass="button" text="Confirm Check-in">
                                                    <VBox.margin>
                                                        <Insets top="20.0"/>
                                                    </VBox.margin>
                                                </Button>
                                            </children>
                                        </VBox>
                                    </children>
                                </VBox>
                            </content>
                        </ScrollPane>
                    </content>
                </Tab>

                <!-- Check-out Tab -->
                <Tab fx:id="tabCheckOut" text="Check-out">
                    <content>
                        <ScrollPane fitToHeight="true" fitToWidth="true">
                            <content>
                                <VBox spacing="20.0">
                                    <padding>
                                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                                    </padding>
                                    <children>
                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                            <children>
                                                <Label text="Reservation ID:"/>
                                                <TextField fx:id="txtCheckOutReservationId" prefWidth="150.0"/>
                                                <Button fx:id="btnSearchCheckOut" mnemonicParsing="false" onAction="#handleSearchCheckOut" styleClass="button" text="Search"/>
                                            </children>
                                        </HBox>
                                        <VBox styleClass="card">
                                            <padding>
                                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                                            </padding>
                                            <children>
                                                <Label styleClass="card-header" text="Reservation Details"/>
                                                <GridPane hgap="20.0" vgap="10.0">
                                                    <columnConstraints>
                                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="100.0" prefWidth="150.0"/>
                                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="400.0"/>
                                                    </columnConstraints>
                                                    <rowConstraints>
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                                    </rowConstraints>
                                                    <children>
                                                        <Label text="Guest Name:"/>
                                                        <Label text="Check-in/out:" GridPane.rowIndex="1"/>
                                                        <Label text="Room:" GridPane.rowIndex="2"/>
                                                        <Label fx:id="lblCheckOutGuestName" GridPane.columnIndex="1"/>
                                                        <Label fx:id="lblCheckOutDates" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                                        <Label fx:id="lblCheckOutRoomInfo" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                                    </children>
                                                    <VBox.margin>
                                                        <Insets bottom="20.0" top="20.0"/>
                                                    </VBox.margin>
                                                </GridPane>
                                                <Separator prefWidth="200.0"/>
                                                <Label styleClass="card-header" text="Billing">
                                                    <VBox.margin>
                                                        <Insets top="10.0"/>
                                                    </VBox.margin>
                                                </Label>
                                                <GridPane hgap="20.0" vgap="10.0">
                                                    <columnConstraints>
                                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="100.0" prefWidth="150.0"/>
                                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="400.0"/>
                                                    </columnConstraints>
                                                    <rowConstraints>
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                                    </rowConstraints>
                                                    <children>
                                                        <Label text="Subtotal:"/>
                                                        <Label text="Tax (13%):" GridPane.rowIndex="1"/>
                                                        <Label text="Discount:" GridPane.rowIndex="2"/>
                                                        <Label text="Total:" GridPane.rowIndex="3"/>
                                                        <Label fx:id="lblSubtotal" text="0.00" GridPane.columnIndex="1"/>
                                                        <Label fx:id="lblTax" text="0.00" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                                        <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                                                            <children>
                                                                <TextField fx:id="txtDiscount" prefWidth="100.0" promptText="0.00"/>
                                                            </children>
                                                        </HBox>
                                                        <Label fx:id="lblTotal" styleClass="label-total" text="0.00" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                                                    </children>
                                                    <VBox.margin>
                                                        <Insets bottom="20.0" top="10.0"/>
                                                    </VBox.margin>
                                                </GridPane>
                                                <Button fx:id="btnConfirmCheckOut" defaultButton="true" disable="true" mnemonicParsing="false" onAction="#handleConfirmCheckOut" styleClass="button" text="Confirm Check-out">
                                                    <VBox.margin>
                                                        <Insets top="20.0"/>
                                                    </VBox.margin>
                                                </Button>
                                            </children>
                                        </VBox>
                                    </children>
                                </VBox>
                            </content>
                        </ScrollPane>
                    </content>
                </Tab>

                <!-- Reports Tab -->
                <Tab fx:id="tabReports" text="Reports">
                    <content>
                        <VBox spacing="20.0">
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                            </padding>
                            <children>
                                <VBox styleClass="card">
                                    <padding>
                                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                                    </padding>
                                    <children>
                                        <Label styleClass="card-header" text="Generate Report"/>
                                        <GridPane hgap="20.0" vgap="10.0">
                                            <columnConstraints>
                                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="100.0" prefWidth="150.0"/>
                                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="400.0"/>
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                            </rowConstraints>
                                            <children>
                                                <Label text="Report Type:"/>
                                                <Label text="Start Date:" GridPane.rowIndex="1"/>
                                                <Label text="End Date:" GridPane.rowIndex="2"/>
                                                <ComboBox fx:id="cmbReportType" prefWidth="300.0" GridPane.columnIndex="1"/>
                                                <DatePicker fx:id="dpReportStartDate" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                                <DatePicker fx:id="dpReportEndDate" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                            </children>
                                            <VBox.margin>
                                                <Insets bottom="20.0" top="20.0"/>
                                            </VBox.margin>
                                        </GridPane>
                                        <Button fx:id="btnGenerateReport" defaultButton="true" mnemonicParsing="false" onAction="#handleGenerateReport" styleClass="button" text="Generate Report"/>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="footer">
            <padding>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
            </padding>
            <children>
                <Label styleClass="label-secondary" text="© 2025 Hotel ABC. All Rights Reserved."/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label styleClass="label-secondary" text="Hotel Reservation System v1.0"/>
            </children>
        </HBox>
    </bottom>
</BorderPane>