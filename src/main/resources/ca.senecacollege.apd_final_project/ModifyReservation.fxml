<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ca.senecacollege.apd_final_project.controller.admin.ModifyReservationController"
            prefHeight="650.0" prefWidth="1024.0"
            styleClass="root">
    <top>
        <VBox spacing="10.0" styleClass="content-container">
            <padding>
                <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
            </padding>
            <Label text="Modify Reservation" styleClass="label-header">
                <font>
                    <Font name="System Bold" size="28.0"/>
                </font>
            </Label>
            <Separator styleClass="separator-dark"/>
            <!-- Guest Information Section -->
            <GridPane hgap="20.0" vgap="15.0" styleClass="guest-info-grid">
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" minWidth="120.0" prefWidth="150.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0"/>
                    <ColumnConstraints hgrow="NEVER" minWidth="120.0" prefWidth="150.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <Label text="Reservation #:" styleClass="info-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Label fx:id="lblReservationId" text="[ID]" styleClass="info-value" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Label text="Status:" styleClass="info-label" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                <Label fx:id="lblStatus" text="[Status]" styleClass="info-value" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                <Label text="Guest Name:" styleClass="info-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <Label fx:id="lblGuestName" text="[Guest Name]" styleClass="info-value" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Label text="Guest ID:" styleClass="info-label" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <Label fx:id="lblGuestId" text="[Guest ID]" styleClass="info-value" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
                <padding>
                    <Insets bottom="10.0"/>
                </padding>
            </GridPane>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" styleClass="transparent-scroll-pane">
            <VBox spacing="20.0" styleClass="content-container">
                <padding>
                    <Insets top="10.0" right="15.0" bottom="10.0" left="15.0"/>
                </padding>

                <!-- Current Room -->
                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <Label text="Current Room:" styleClass="info-label">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Label>
                    <Label fx:id="lblCurrentRoom" text="[Room Info]" styleClass="info-value">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Label>
                </HBox>

                <!-- Dates and Guest Count in Single Row -->
                <HBox alignment="CENTER" spacing="30.0">
                    <!-- Check-in Date Selection -->
                    <VBox alignment="CENTER" spacing="10.0">
                        <Label text="Check-in Date" styleClass="date-label">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Label>

                        <DatePicker fx:id="dpCheckInDate" prefHeight="40.0" prefWidth="200.0"
                                    promptText="Select check-in date" styleClass="kiosk-date-picker"/>
                    </VBox>

                    <!-- Check-out Date Selection -->
                    <VBox alignment="CENTER" spacing="10.0">
                        <Label text="Check-out Date" styleClass="date-label">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Label>

                        <DatePicker fx:id="dpCheckOutDate" prefHeight="40.0" prefWidth="200.0"
                                    promptText="Select check-out date" styleClass="kiosk-date-picker"/>
                    </VBox>

                    <!-- Guest Count -->
                    <VBox alignment="CENTER" spacing="10.0">
                        <Label text="Number of Guests" styleClass="date-label">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Label>

                        <Spinner fx:id="spnNumberOfGuests" prefHeight="40.0" prefWidth="150.0" styleClass="guest-spinner"/>
                    </VBox>
                </HBox>

                <Separator styleClass="separator-dark"/>

                <!-- Room Selection Section -->
                <Label text="Room Selection" styleClass="section-header">
                    <font>
                        <Font size="22.0" />
                    </font>
                </Label>

                <!-- Single Rooms -->
                <TitledPane text="Single Rooms (max 2 guests)" expanded="true" styleClass="room-titled-pane">
                    <VBox spacing="10.0">
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                            <Label text="Number of Rooms:" styleClass="info-label"/>
                            <Spinner fx:id="spnSingleRooms" prefWidth="100.0" styleClass="room-spinner"/>
                        </HBox>
                        <ListView fx:id="lvSingleRooms" prefHeight="120.0" styleClass="room-list-view"/>
                    </VBox>
                </TitledPane>

                <!-- Double Rooms -->
                <TitledPane text="Double Rooms (max 4 guests)" expanded="true" styleClass="room-titled-pane">
                    <VBox spacing="10.0">
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                            <Label text="Number of Rooms:" styleClass="info-label"/>
                            <Spinner fx:id="spnDoubleRooms" prefWidth="100.0" styleClass="room-spinner"/>
                        </HBox>
                        <ListView fx:id="lvDoubleRooms" prefHeight="120.0" styleClass="room-list-view"/>
                    </VBox>
                </TitledPane>

                <!-- Additional Rooms -->
                <TitledPane text="Additional Room Types" expanded="false" styleClass="room-titled-pane">
                    <VBox spacing="15.0">
                        <!-- Deluxe Rooms -->
                        <Label text="Deluxe Rooms (max 2 guests)" styleClass="room-type-label"/>
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                            <Label text="Number of Rooms:" styleClass="info-label"/>
                            <Spinner fx:id="spnDeluxeRooms" prefWidth="100.0" styleClass="room-spinner"/>
                        </HBox>
                        <ListView fx:id="lvDeluxeRooms" prefHeight="100.0" styleClass="room-list-view"/>

                        <!-- Penthouse -->
                        <Label text="Penthouse (max 2 guests)" styleClass="room-type-label"/>
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                            <Label text="Number of Rooms:" styleClass="info-label"/>
                            <Spinner fx:id="spnPenthouseRooms" prefWidth="100.0" styleClass="room-spinner"/>
                        </HBox>
                        <ListView fx:id="lvPenthouseRooms" prefHeight="100.0" styleClass="room-list-view"/>
                    </VBox>
                </TitledPane>

                <!-- Summary Section -->
                <HBox alignment="CENTER" spacing="40.0" styleClass="summary-container">
                    <VBox alignment="CENTER" spacing="5.0">
                        <Label text="Total Rooms:" styleClass="summary-label"/>
                        <Label fx:id="lblTotalRooms" text="0" styleClass="summary-value"/>
                    </VBox>

                    <VBox alignment="CENTER" spacing="5.0">
                        <Label text="Total Capacity:" styleClass="summary-label"/>
                        <Label fx:id="lblTotalCapacity" text="0" styleClass="summary-value"/>
                    </VBox>

                    <VBox alignment="CENTER" spacing="5.0">
                        <Label text="Guests Needing Rooms:" styleClass="summary-label"/>
                        <Label fx:id="lblGuestCount" text="0" styleClass="summary-value"/>
                    </VBox>
                </HBox>

                <!-- Error Message -->
                <HBox alignment="CENTER" styleClass="error-container">
                    <Label fx:id="lblError" text="Error message goes here" styleClass="error-label" visible="false"/>
                </HBox>
            </VBox>
        </ScrollPane>
    </center>

    <bottom>
        <VBox>
            <!-- Navigation Buttons -->
            <HBox alignment="CENTER_RIGHT" spacing="15.0" styleClass="button-container">
                <padding>
                    <Insets top="15.0" right="20.0" bottom="15.0" left="20.0"/>
                </padding>
                <Button fx:id="btnCancel" text="Cancel" onAction="#handleCancelButton"
                        prefWidth="120.0" prefHeight="40.0" styleClass="button-secondary"/>
                <Button fx:id="btnSave" text="Save Changes" onAction="#handleSaveButton"
                        prefWidth="150.0" prefHeight="40.0" styleClass="button"/>
            </HBox>

            <!-- Footer -->
            <HBox alignment="CENTER" styleClass="bg-dark">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
                <Label styleClass="label-secondary" text="Need assistance? Please contact your system administrator." />
            </HBox>
        </VBox>
    </bottom>
</BorderPane>