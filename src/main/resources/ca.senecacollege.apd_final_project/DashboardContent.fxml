<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" styleClass="content-area" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <children>
        <HBox spacing="20.0">
            <children>
                <VBox styleClass="stat-card" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                    </padding>
                    <children>
                        <Label styleClass="card-header" text="Today's Check-ins"/>
                        <Label fx:id="lblTodayCheckIns" styleClass="stat-number" text="0">
                            <font>
                                <Font size="36.0"/>
                            </font>
                        </Label>
                    </children>
                </VBox>
                <VBox styleClass="stat-card" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                    </padding>
                    <children>
                        <Label styleClass="card-header" text="Today's Check-outs"/>
                        <Label fx:id="lblTodayCheckOuts" styleClass="stat-number" text="0">
                            <font>
                                <Font size="36.0"/>
                            </font>
                        </Label>
                    </children>
                </VBox>
                <VBox styleClass="stat-card" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                    </padding>
                    <children>
                        <Label styleClass="card-header" text="Active Reservations"/>
                        <Label fx:id="lblActiveReservations" styleClass="stat-number" text="0">
                            <font>
                                <Font size="36.0"/>
                            </font>
                        </Label>
                    </children>
                </VBox>
            </children>
        </HBox>
        <HBox spacing="20.0" VBox.vgrow="ALWAYS">
            <children>
                <VBox styleClass="data-card" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                    </padding>
                    <children>
                        <Label styleClass="card-header" text="Today's Check-ins"/>
                        <TableView fx:id="tblTodayCheckIns" VBox.vgrow="ALWAYS" styleClass="admin-table"/>
                    </children>
                </VBox>
                <VBox styleClass="data-card" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                    </padding>
                    <children>
                        <Label styleClass="card-header" text="Today's Check-outs"/>
                        <TableView fx:id="tblTodayCheckOuts" VBox.vgrow="ALWAYS" styleClass="admin-table"/>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</VBox>