<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="ca.senecacollege.apd_final_project.controller.admin.DashboardContentController"
      spacing="20.0" styleClass="content-area">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox spacing="20.0">
        <VBox styleClass="stat-card" HBox.hgrow="ALWAYS">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </padding>
            <Label styleClass="card-header" text="Today's Check-ins"/>
            <Label fx:id="lblTodayCheckIns" styleClass="stat-number" text="0">
                <font>
                    <Font size="36.0"/>
                </font>
            </Label>
        </VBox>
        <VBox styleClass="stat-card" HBox.hgrow="ALWAYS">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </padding>
            <Label styleClass="card-header" text="Today's Check-outs"/>
            <Label fx:id="lblTodayCheckOuts" styleClass="stat-number" text="0">
                <font>
                    <Font size="36.0"/>
                </font>
            </Label>
        </VBox>
        <VBox styleClass="stat-card" HBox.hgrow="ALWAYS">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </padding>
            <Label styleClass="card-header" text="Active Reservations"/>
            <Label fx:id="lblActiveReservations" styleClass="stat-number" text="0">
                <font>
                    <Font size="36.0"/>
                </font>
            </Label>
        </VBox>
    </HBox>

    <HBox spacing="20.0" VBox.vgrow="ALWAYS">
        <VBox styleClass="data-card" HBox.hgrow="ALWAYS">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </padding>
            <Label styleClass="card-header" text="Today's Check-ins"/>
            <TableView fx:id="tblTodayCheckIns" VBox.vgrow="ALWAYS" styleClass="admin-table"/>
        </VBox>
        <VBox styleClass="data-card" HBox.hgrow="ALWAYS">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </padding>
            <Label styleClass="card-header" text="Today's Check-outs"/>
            <TableView fx:id="tblTodayCheckOuts" VBox.vgrow="ALWAYS" styleClass="admin-table"/>
        </VBox>
    </HBox>
</VBox>