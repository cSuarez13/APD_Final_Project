<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" styleClass="root"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ca.senecacollege.apd_final_project.controller.admin.ReportController">
    <top>
        <VBox spacing="10.0" styleClass="card">
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
            </padding>
            <children>
                <Label styleClass="label-header" text="Generate Reports">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                </Label>

                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <children>
                        <Label text="Report Type:" styleClass="label-secondary">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Label>
                        <ComboBox fx:id="cmbReportType" prefWidth="200.0"/>

                        <Label text="Start Date:" styleClass="label-secondary">
                            <HBox.margin>
                                <Insets left="20.0"/>
                            </HBox.margin>
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Label>
                        <DatePicker fx:id="dpStartDate"/>

                        <Label text="End Date:" styleClass="label-secondary">
                            <HBox.margin>
                                <Insets left="20.0"/>
                            </HBox.margin>
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Label>
                        <DatePicker fx:id="dpEndDate"/>

                        <Button fx:id="btnGenerateReport" defaultButton="true" mnemonicParsing="false" onAction="#handleGenerateReport"
                                styleClass="button" text="Generate Report">
                            <HBox.margin>
                                <Insets left="20.0"/>
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>

                <Separator/>

                <Label fx:id="lblReportSummary" styleClass="label-secondary" text="">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
            </children>
        </VBox>
    </top>

    <center>
        <TabPane fx:id="tabPaneReports" styleClass="admin-tab-pane" VBox.vgrow="ALWAYS">
            <tabs>
                <Tab text="Table" closable="false">
                    <content>
                        <ScrollPane fitToWidth="true" styleClass="dark-scroll-pane">
                            <content>
                                <VBox spacing="10.0">
                                    <padding>
                                        <Insets bottom="20.0" left="10.0" right="10.0" top="10.0"/>
                                    </padding>

                                    <!-- Occupancy Report Table -->
                                    <TableView fx:id="tblOccupancy" styleClass="admin-table" VBox.vgrow="ALWAYS"
                                               visible="false" maxHeight="400.0"/>

                                    <!-- Revenue Report Table -->
                                    <TableView fx:id="tblRevenue" styleClass="admin-table" VBox.vgrow="ALWAYS"
                                               visible="false" maxHeight="400.0"/>

                                    <!-- Feedback Report Table -->
                                    <TableView fx:id="tblFeedback" styleClass="admin-table" VBox.vgrow="ALWAYS"
                                               visible="false" maxHeight="400.0"/>
                                </VBox>
                            </content>
                        </ScrollPane>
                    </content>
                </Tab>
                <Tab text="Chart" closable="false">
                    <content>
                        <BorderPane>
                            <center>
                                <VBox spacing="10.0" alignment="CENTER">
                                    <padding>
                                        <Insets bottom="20.0" left="10.0" right="10.0" top="10.0"/>
                                    </padding>

                                    <!-- Occupancy Report Chart -->
                                    <BorderPane fx:id="occupancyPane" visible="false" VBox.vgrow="ALWAYS"
                                                maxHeight="400.0"/>

                                    <!-- Revenue Report Chart -->
                                    <BorderPane fx:id="revenuePane" visible="false" VBox.vgrow="ALWAYS"
                                                maxHeight="400.0"/>

                                    <!-- Feedback Report Chart -->
                                    <BorderPane fx:id="feedbackPane" visible="false" VBox.vgrow="ALWAYS"
                                                maxHeight="400.0"/>
                                </VBox>
                            </center>
                        </BorderPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" styleClass="bg-dark">
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
            </padding>
            <children>
                <Button fx:id="btnExportReport" disable="true" mnemonicParsing="false" onAction="#handleExportReport"
                        styleClass="button-secondary" text="Export Report"/>
                <Button fx:id="btnClose" cancelButton="true" mnemonicParsing="false" onAction="#handleCloseButton"
                        styleClass="button-secondary" text="Close"/>
            </children>
        </HBox>
    </bottom>
</BorderPane>