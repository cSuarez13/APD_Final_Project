<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" styleClass="root"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ca.senecacollege.apd_final_project.controller.admin.ReportController">
    <top>
        <VBox spacing="10.0" styleClass="card">
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
            </padding>
            <children>
                <Label styleClass="label-header" text="Generate Reports">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                </Label>

                <Label fx:id="lblError" styleClass="label-error" text="Error message goes here" textFill="#cf6679" visible="false">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>

                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <children>
                        <Label text="Report Type:">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Label>
                        <ComboBox fx:id="cmbReportType" prefWidth="200.0"/>

                        <Label text="Start Date:">
                            <HBox.margin>
                                <Insets left="20.0"/>
                            </HBox.margin>
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Label>
                        <DatePicker fx:id="dpStartDate"/>

                        <Label text="End Date:">
                            <HBox.margin>
                                <Insets left="20.0"/>
                            </HBox.margin>
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Label>
                        <DatePicker fx:id="dpEndDate"/>

                        <Button fx:id="btnGenerateReport" defaultButton="true" mnemonicParsing="false" onAction="#handleGenerateReport"
                                styleClass="button" text="Generate Report">
                            <HBox.margin>
                                <Insets left="20.0"/>
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>

                <Separator/>

                <Label fx:id="lblReportSummary" styleClass="label-secondary" text="">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
            </children>
        </VBox>
    </top>

    <center>
        <TabPane fx:id="tabPaneReports" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
            <tabs>
                <Tab fx:id="tabOccupancy" text="Occupancy Report">
                    <content>
                        <BorderPane fx:id="occupancyPane">
                            <top>
                                <TableView fx:id="tblOccupancy" prefHeight="200.0" BorderPane.alignment="CENTER">
                                    <BorderPane.margin>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                    </BorderPane.margin>
                                </TableView>
                            </top>
                        </BorderPane>
                    </content>
                </Tab>

                <Tab fx:id="tabRevenue" text="Revenue Report">
                    <content>
                        <BorderPane fx:id="revenuePane">
                            <top>
                                <TableView fx:id="tblRevenue" prefHeight="200.0" BorderPane.alignment="CENTER">
                                    <BorderPane.margin>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                    </BorderPane.margin>
                                </TableView>
                            </top>
                        </BorderPane>
                    </content>
                </Tab>

                <Tab fx:id="tabFeedback" text="Feedback Report">
                    <content>
                        <BorderPane fx:id="feedbackPane">
                            <top>
                                <TableView fx:id="tblFeedback" prefHeight="200.0" BorderPane.alignment="CENTER">
                                    <BorderPane.margin>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                    </BorderPane.margin>
                                </TableView>
                            </top>
                        </BorderPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" styleClass="bg-dark">
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
            </padding>
            <children>
                <Button fx:id="btnExportReport" disable="true" mnemonicParsing="false" onAction="#handleExportReport"
                        styleClass="button-secondary" text="Export Report"/>
                <Button fx:id="btnClose" cancelButton="true" mnemonicParsing="false" onAction="#handleCloseButton"
                        styleClass="button-secondary" text="Close"/>
            </children>
        </HBox>
    </bottom>
</BorderPane>