<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane fx:id="mainPane" prefHeight="768.0" prefWidth="1024.0" styleClass="root"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ca.senecacollege.apd_final_project.controller.kiosk.DateSelectionController">

    <center>
        <VBox alignment="CENTER" spacing="30.0" styleClass="content-container">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>

            <!-- Header -->
            <Label styleClass="label-header" text="Select Your Stay Dates">
                <font>
                    <Font name="System Bold" size="36.0" />
                </font>
            </Label>

            <Label styleClass="label-secondary" text="Please choose your check-in and check-out dates">
                <font>
                    <Font size="24.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="30.0" />
                </VBox.margin>
            </Label>

            <!-- Date Selection Area -->
            <HBox alignment="CENTER" spacing="60.0">
                <!-- Check-in Date Selection -->
                <VBox alignment="CENTER" spacing="15.0">
                    <Label text="Check-in Date" styleClass="date-label">
                        <font>
                            <Font size="20.0" />
                        </font>
                    </Label>

                    <DatePicker fx:id="dpCheckIn" prefHeight="50.0" prefWidth="300.0"
                                promptText="Select check-in date" styleClass="kiosk-date-picker">
                        <VBox.margin>
                            <Insets top="10.0" />
                        </VBox.margin>
                    </DatePicker>
                </VBox>

                <!-- Check-out Date Selection -->
                <VBox alignment="CENTER" spacing="15.0">
                    <Label text="Check-out Date" styleClass="date-label">
                        <font>
                            <Font size="20.0" />
                        </font>
                    </Label>

                    <DatePicker fx:id="dpCheckOut" prefHeight="50.0" prefWidth="300.0"
                                promptText="Select check-out date" styleClass="kiosk-date-picker">
                        <VBox.margin>
                            <Insets top="10.0" />
                        </VBox.margin>
                    </DatePicker>
                </VBox>
            </HBox>

            <!-- Description text -->
            <Label fx:id="lblStayInfo" styleClass="stay-info"
                   text="Your stay: 0 nights">
                <font>
                    <Font size="22.0" />
                </font>
                <VBox.margin>
                    <Insets top="20.0" bottom="30.0" />
                </VBox.margin>
            </Label>

            <!-- Navigation buttons -->
            <HBox alignment="CENTER" spacing="40.0">
                <Button fx:id="btnBack" cancelButton="true" mnemonicParsing="false" onAction="#handleBackButton"
                        prefHeight="60.0" prefWidth="200.0" styleClass="button-secondary" text="Back">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Button>

                <Button fx:id="btnRules" mnemonicParsing="false" onAction="#handleRulesButton"
                        prefHeight="60.0" prefWidth="250.0" styleClass="button-secondary"
                        text="Rules &amp; Regulations">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Button>

                <Button fx:id="btnNext" defaultButton="true" mnemonicParsing="false" onAction="#handleNextButton"
                        prefHeight="60.0" prefWidth="200.0" styleClass="button" text="Next">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Button>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" styleClass="bg-dark">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Label styleClass="label-secondary" text="Touch the screen to interact. Need assistance? Please contact the front desk." />
        </HBox>
    </bottom>
</BorderPane>