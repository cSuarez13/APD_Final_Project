<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" styleClass="root"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ca.senecacollege.apd_final_project.controller.kiosk.BookingScreenController">

    <center>
        <VBox alignment="CENTER" spacing="10.0" styleClass="content-container">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>

            <!-- Header -->
            <Label styleClass="label-header" text="Book Your Stay">
                <font>
                    <Font name="System Bold" size="36.0" />
                </font>
            </Label>

            <Label styleClass="label-secondary" text="Please provide your booking details">
                <font>
                    <Font size="18.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="5.0" />
                </VBox.margin>
            </Label>

            <!-- Error message is hidden by default and will appear as a popup -->

            <!-- Main content grid -->
            <GridPane hgap="15.0" vgap="10.0" VBox.vgrow="ALWAYS" alignment="CENTER">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="350.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="350.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="30.0" prefHeight="30.0" />
                    <RowConstraints minHeight="50.0" prefHeight="55.0" />
                    <RowConstraints minHeight="30.0" prefHeight="30.0" />
                    <RowConstraints minHeight="50.0" prefHeight="55.0" />
                </rowConstraints>

                <!-- Row 1: Number of Guests field label -->
                <Label text="Number of Guests:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                       styleClass="form-label">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>

                <!-- Row 1: Check-in Date field label -->
                <Label text="Check-in Date:" GridPane.rowIndex="0" GridPane.columnIndex="1"
                       styleClass="form-label">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>

                <!-- Row 2: Input fields -->
                <Spinner fx:id="spnGuests" GridPane.rowIndex="1" GridPane.columnIndex="0"
                         prefHeight="55.0" prefWidth="350.0" maxWidth="Infinity" />

                <DatePicker fx:id="dpCheckIn" promptText="Select check-in date"
                            GridPane.rowIndex="1" GridPane.columnIndex="1"
                            prefHeight="55.0" maxWidth="Infinity" />

                <!-- Row 3: Room Type / Check-out Date labels -->
                <Label text="Room Type:" GridPane.rowIndex="2" GridPane.columnIndex="0"
                       styleClass="form-label">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <GridPane.margin>
                        <Insets top="15.0" />
                    </GridPane.margin>
                </Label>

                <Label text="Check-out Date:" GridPane.rowIndex="2" GridPane.columnIndex="1"
                       styleClass="form-label">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <GridPane.margin>
                        <Insets top="15.0" />
                    </GridPane.margin>
                </Label>

                <!-- Row 4: Input fields -->
                <ComboBox fx:id="cmbRoomType" promptText="Select room type"
                          GridPane.rowIndex="3" GridPane.columnIndex="0"
                          GridPane.hgrow="ALWAYS"
                          prefHeight="55.0" prefWidth="350.0" maxWidth="Infinity" />

                <DatePicker fx:id="dpCheckOut" promptText="Select check-out date"
                            GridPane.rowIndex="3" GridPane.columnIndex="1"
                            prefHeight="55.0" maxWidth="Infinity" />
            </GridPane>

            <Separator>
                <VBox.margin>
                    <Insets top="15.0" bottom="10.0" />
                </VBox.margin>
            </Separator>

            <!-- Room suggestion -->
            <Label fx:id="lblSuggestion" styleClass="label-suggestion"
                   text="Based on your party size, we recommend a Single Room."
                   wrapText="true">
                <font>
                    <Font size="18.0" />
                </font>
                <VBox.margin>
                    <Insets left="10.0" right="10.0" />
                </VBox.margin>
                <padding>
                    <Insets top="10.0" bottom="10.0" left="10.0" right="10.0" />
                </padding>
            </Label>

            <Separator>
                <VBox.margin>
                    <Insets top="10.0" bottom="15.0" />
                </VBox.margin>
            </Separator>

            <!-- Buttons -->
            <HBox alignment="CENTER" spacing="15.0">
                <Button fx:id="btnBack" cancelButton="true" mnemonicParsing="false"
                        onAction="#handleBackButton" prefHeight="60.0" prefWidth="250.0"
                        styleClass="button-secondary" text="Back">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Button>

                <Button fx:id="btnRules" mnemonicParsing="false" onAction="#handleRulesButton"
                        prefHeight="60.0" prefWidth="300.0" styleClass="button-secondary"
                        text="Rules &amp; Regulations" wrapText="true">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Button>

                <Button fx:id="btnNext" defaultButton="true" mnemonicParsing="false"
                        onAction="#handleNextButton" prefHeight="60.0" prefWidth="250.0"
                        styleClass="button" text="Next">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Button>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" styleClass="bg-dark">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Label styleClass="label-secondary" text="Need assistance? Please contact the front desk." />
        </HBox>
    </bottom>
</BorderPane>