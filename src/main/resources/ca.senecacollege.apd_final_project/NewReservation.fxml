<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ca.senecacollege.apd_final_project.controller.admin.NewReservationController"
            prefHeight="600.0" prefWidth="800.0"
            styleClass="content-pane">
    <top>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
            </padding>
            <Label text="New Reservation" styleClass="header-label">
                <font>
                    <Font name="System Bold" size="18.0"/>
                </font>
            </Label>
            <Separator/>
            <GridPane hgap="10.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" minWidth="120.0" prefWidth="150.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0"/>
                    <ColumnConstraints hgrow="NEVER" minWidth="120.0" prefWidth="150.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="30.0" prefHeight="40.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="30.0" prefHeight="40.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <Label text="Guest Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Label fx:id="lblGuestName" text="[Guest Name]" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Label text="Guest ID:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                <Label fx:id="lblGuestId" text="[Guest ID]" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
                <Label text="Check-in Date:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <DatePicker fx:id="dpCheckInDate" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Label text="Check-out Date:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <DatePicker fx:id="dpCheckOutDate" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
            </GridPane>
        </VBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true" BorderPane.alignment="CENTER">
            <VBox spacing="15.0">
                <padding>
                    <Insets top="10.0" right="15.0" bottom="10.0" left="15.0"/>
                </padding>
                <Label text="Room Selection" styleClass="subheader-label">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <GridPane hgap="15.0" vgap="15.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" minWidth="160.0" prefWidth="180.0"/>
                        <ColumnConstraints hgrow="NEVER" minWidth="80.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" prefWidth="400.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="30.0" prefHeight="40.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="100.0" prefHeight="120.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="30.0" prefHeight="40.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="100.0" prefHeight="120.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="30.0" prefHeight="40.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <!-- Single Rooms -->
                    <Label text="Single Rooms (max 2 guests):" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <Spinner fx:id="spnSingleRooms" editable="true" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    <ListView fx:id="lvSingleRooms" GridPane.columnIndex="0" GridPane.rowIndex="1"
                              GridPane.columnSpan="3"/>

                    <!-- Double Rooms -->
                    <Label text="Double Rooms (max 4 guests):" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <Spinner fx:id="spnDoubleRooms" editable="true" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    <ListView fx:id="lvDoubleRooms" GridPane.columnIndex="0" GridPane.rowIndex="3"
                              GridPane.columnSpan="3"/>

                    <!-- Summary section -->
                    <Label text="Number of Guests:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                    <Spinner fx:id="spnNumberOfGuests" editable="true" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                    <GridPane hgap="10.0" vgap="10.0" GridPane.columnIndex="2" GridPane.rowIndex="4">
                        <columnConstraints>
                            <ColumnConstraints hgrow="NEVER" minWidth="120.0" prefWidth="140.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" prefWidth="100.0"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="20.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="20.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        </rowConstraints>
                        <Label text="Total Rooms:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <Label fx:id="lblTotalRooms" text="0" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                        <Label text="Total Capacity:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <Label fx:id="lblTotalCapacity" text="0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    </GridPane>
                </GridPane>

                <TitledPane text="Additional Room Types" expanded="false">
                    <GridPane hgap="15.0" vgap="15.0">
                        <columnConstraints>
                            <ColumnConstraints hgrow="NEVER" minWidth="160.0" prefWidth="180.0"/>
                            <ColumnConstraints hgrow="NEVER" minWidth="80.0" prefWidth="100.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" prefWidth="400.0"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="30.0" prefHeight="40.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="100.0" prefHeight="120.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="30.0" prefHeight="40.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="100.0" prefHeight="120.0" vgrow="SOMETIMES"/>
                        </rowConstraints>
                        <!-- Deluxe Rooms -->
                        <Label text="Deluxe Rooms (max 2 guests):" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <Spinner fx:id="spnDeluxeRooms" editable="true" GridPane.columnIndex="1"
                                 GridPane.rowIndex="0"/>
                        <ListView fx:id="lvDeluxeRooms" GridPane.columnIndex="0" GridPane.rowIndex="1"
                                  GridPane.columnSpan="3"/>

                        <!-- Penthouse Rooms -->
                        <Label text="Penthouse (max 2 guests):" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <Spinner fx:id="spnPenthouseRooms" editable="true" GridPane.columnIndex="1"
                                 GridPane.rowIndex="2"/>
                        <ListView fx:id="lvPenthouseRooms" GridPane.columnIndex="0" GridPane.rowIndex="3"
                                  GridPane.columnSpan="3"/>
                    </GridPane>
                </TitledPane>
                <Separator/>
                <HBox alignment="CENTER">
                    <Label fx:id="lblError" text="Error message goes here" textFill="RED" visible="false"/>
                </HBox>
            </VBox>
        </ScrollPane>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10.0" right="15.0" bottom="15.0" left="15.0"/>
            </padding>
            <Button fx:id="btnSave" text="Save" onAction="#handleSaveButton" prefWidth="100.0"/>
            <Button fx:id="btnCancel" text="Cancel" onAction="#handleCancelButton" prefWidth="100.0"/>
        </HBox>
    </bottom>
</BorderPane>