<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" styleClass="root"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ca.senecacollege.apd_final_project.controller.kiosk.FeedbackController">
    <center>
        <VBox alignment="CENTER" spacing="20.0" styleClass="card" BorderPane.alignment="CENTER">
            <children>
                <Label styleClass="label-header" text="Share Your Experience">
                    <font>
                        <Font name="System Bold" size="36.0" />
                    </font>
                </Label>

                <Label styleClass="label-secondary" text="We value your feedback. Please rate your stay and share your thoughts.">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>

                <Label fx:id="lblError" styleClass="label-error" text="Error message goes here" textFill="#cf6679" visible="false">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>

                <Label fx:id="lblThankYou" styleClass="label-success" text="Thank you for your feedback! We appreciate your input and hope to see you again soon." textAlignment="CENTER" visible="false" wrapText="true">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <padding>
                        <Insets bottom="20.0" left="50.0" right="50.0" top="20.0" />
                    </padding>
                </Label>

                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Label text="Reservation ID:">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="txtReservationId" prefWidth="150.0" promptText="Enter ID" />
                        <Button fx:id="btnVerify" defaultButton="true" mnemonicParsing="false" onAction="#handleVerifyButton"
                                prefHeight="30.0" prefWidth="100.0" styleClass="button" text="Verify" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                    </VBox.margin>
                </HBox>

                <Separator />

                <!-- Reservation Details Section -->
                <VBox spacing="10.0" styleClass="details-panel">
                    <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                    </padding>
                    <children>
                        <Label styleClass="label-subheader" text="Stay Details">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>

                        <HBox spacing="30.0">
                            <children>
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Guest Name:" styleClass="detail-label" />
                                        <Label fx:id="lblGuestName" styleClass="detail-value" text="" />
                                    </children>
                                </VBox>

                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Room:" styleClass="detail-label" />
                                        <Label fx:id="lblRoomInfo" styleClass="detail-value" text="" />
                                    </children>
                                </VBox>

                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Check-in Date:" styleClass="detail-label" />
                                        <Label fx:id="lblCheckInDate" styleClass="detail-value" text="" />
                                    </children>
                                </VBox>

                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Check-out Date:" styleClass="detail-label" />
                                        <Label fx:id="lblCheckOutDate" styleClass="detail-value" text="" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <!-- Rating Section -->
                <VBox spacing="10.0" alignment="CENTER">
                    <children>
                        <Label text="How would you rate your stay?">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Label>

                        <HBox fx:id="starsContainer" alignment="CENTER" spacing="15.0">
                            <children>
                                <Label styleClass="rating-star" text="★">
                                    <font>
                                        <Font size="36.0" />
                                    </font>
                                </Label>
                                <Label styleClass="rating-star" text="★">
                                    <font>
                                        <Font size="36.0" />
                                    </font>
                                </Label>
                                <Label styleClass="rating-star" text="★">
                                    <font>
                                        <Font size="36.0" />
                                    </font>
                                </Label>
                                <Label styleClass="rating-star" text="★">
                                    <font>
                                        <Font size="36.0" />
                                    </font>
                                </Label>
                                <Label styleClass="rating-star" text="★">
                                    <font>
                                        <Font size="36.0" />
                                    </font>
                                </Label>
                            </children>
                            <VBox.margin>
                                <Insets bottom="10.0" top="10.0" />
                            </VBox.margin>
                        </HBox>
                    </children>
                </VBox>

                <!-- Comments Section -->
                <VBox spacing="10.0">
                    <children>
                        <Label text="Additional Comments (Optional):">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Label>

                        <TextArea fx:id="txtComments" prefHeight="100.0" prefWidth="600.0" promptText="Please share your experience, suggestions, or any issues you encountered during your stay." wrapText="true" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="20.0" left="50.0" right="50.0" />
                    </VBox.margin>
                </VBox>

                <!-- Buttons -->
                <HBox alignment="CENTER" spacing="30.0">
                    <children>
                        <Button fx:id="btnCancel" cancelButton="true" mnemonicParsing="false" onAction="#handleCancelButton"
                                prefHeight="60.0" prefWidth="180.0" styleClass="button-secondary" text="Cancel">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Button>
                        <Button fx:id="btnSubmit" defaultButton="true" disable="true" mnemonicParsing="false" onAction="#handleSubmitButton"
                                prefHeight="60.0" prefWidth="180.0" styleClass="button" text="Submit Feedback">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </HBox>
            </children>
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>
            <BorderPane.margin>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </BorderPane.margin>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" styleClass="bg-dark">
            <children>
                <Label styleClass="label-secondary" text="Your feedback helps us improve our services. Thank you for choosing Hotel ABC." />
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>