<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" styleClass="root"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ca.senecacollege.apd_final_project.controller.kiosk.FeedbackController">
    <center>
        <ScrollPane fitToWidth="true" styleClass="transparent-scroll-pane">
            <VBox alignment="CENTER" spacing="15.0" styleClass="content-container">
                <padding>
                    <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
                </padding>
                <Label styleClass="label-header" text="Share Your Experience">
                    <font>
                        <Font name="System Bold" size="32.0"/>
                    </font>
                </Label>

                <Label styleClass="label-secondary"
                       text="We value your feedback. Please rate your stay and share your thoughts.">
                    <font>
                        <Font size="16.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                </Label>

                <HBox alignment="CENTER" spacing="10.0">
                    <Label text="Reservation ID:">
                        <font>
                            <Font size="14.0"/>
                        </font>
                    </Label>
                    <TextField fx:id="txtReservationId" prefWidth="150.0" promptText="Enter ID"
                               styleClass="kiosk-input"/>
                    <Button fx:id="btnVerify" defaultButton="true" mnemonicParsing="false"
                            onAction="#handleVerifyButton"
                            prefHeight="25.0" prefWidth="100.0" styleClass="button-small" text="Verify"/>
                </HBox>

                <Separator/>

                <!-- Reservation Details Section -->
                <VBox spacing="5.0" styleClass="details-panel">
                    <padding>
                        <Insets bottom="5.0" left="15.0" right="15.0" top="5.0"/>
                    </padding>
                    <Label styleClass="label-subheader" text="Stay Details">
                        <font>
                            <Font name="System Bold" size="16.0"/>
                        </font>
                    </Label>

                    <HBox spacing="25.0">
                        <VBox spacing="3.0">
                            <Label text="Guest Name:" styleClass="detail-label"/>
                            <Label fx:id="lblGuestName" styleClass="detail-value"/>
                        </VBox>

                        <VBox spacing="3.0">
                            <Label text="Room:" styleClass="detail-label"/>
                            <Label fx:id="lblRoomInfo" styleClass="detail-value"/>
                        </VBox>

                        <VBox spacing="3.0">
                            <Label text="Check-in Date:" styleClass="detail-label"/>
                            <Label fx:id="lblCheckInDate" styleClass="detail-value"/>
                        </VBox>

                        <VBox spacing="3.0">
                            <Label text="Check-out Date:" styleClass="detail-label"/>
                            <Label fx:id="lblCheckOutDate" styleClass="detail-value"/>
                        </VBox>
                    </HBox>
                </VBox>

                <!-- Rating Section -->
                <VBox spacing="5.0" alignment="CENTER">
                    <Label text="How would you rate your stay?">
                        <font>
                            <Font size="16.0"/>
                        </font>
                    </Label>

                    <HBox fx:id="starsContainer" alignment="CENTER" spacing="15.0">
                        <VBox.margin>
                            <Insets bottom="5.0" top="5.0"/>
                        </VBox.margin>
                        <!-- Use Label with hover effect -->
                        <Label text="★" styleClass="rating-star">
                            <font>
                                <Font size="36.0"/>
                            </font>
                        </Label>
                        <Label text="★" styleClass="rating-star">
                            <font>
                                <Font size="36.0"/>
                            </font>
                        </Label>
                        <Label text="★" styleClass="rating-star">
                            <font>
                                <Font size="36.0"/>
                            </font>
                        </Label>
                        <Label text="★" styleClass="rating-star">
                            <font>
                                <Font size="36.0"/>
                            </font>
                        </Label>
                        <Label text="★" styleClass="rating-star">
                            <font>
                                <Font size="36.0"/>
                            </font>
                        </Label>
                    </HBox>
                </VBox>

                <!-- Comments Section -->
                <VBox spacing="5.0">
                    <VBox.margin>
                        <Insets bottom="10.0" left="40.0" right="40.0"/>
                    </VBox.margin>
                    <Label text="Additional Comments (Optional):">
                        <font>
                            <Font size="16.0"/>
                        </font>
                    </Label>

                    <TextArea fx:id="txtComments" prefHeight="80.0" prefWidth="600.0"
                              promptText="Please share your experience, suggestions, or any issues you encountered during your stay."
                              wrapText="true" styleClass="kiosk-input"/>
                </VBox>

                <!-- Buttons -->
                <HBox alignment="CENTER" spacing="30.0">
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                    <Button fx:id="btnCancel" cancelButton="true" mnemonicParsing="false"
                            onAction="#handleCancelButton"
                            prefHeight="50.0" prefWidth="180.0" styleClass="button-secondary" text="Cancel">
                        <font>
                            <Font size="16.0"/>
                        </font>
                    </Button>
                    <Button fx:id="btnSubmit" defaultButton="true" disable="true" mnemonicParsing="false"
                            onAction="#handleSubmitButton"
                            prefHeight="50.0" prefWidth="180.0" styleClass="button" text="Submit Feedback">
                        <font>
                            <Font size="16.0"/>
                        </font>
                    </Button>
                </HBox>
            </VBox>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" styleClass="bg-dark">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <Label styleClass="label-secondary"
                   text="Your feedback helps us improve our services. Thank you for choosing Hotel ABC."/>
        </HBox>
    </bottom>
</BorderPane>