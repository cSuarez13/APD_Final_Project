<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="800.0" prefWidth="1024.0" styleClass="root"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ca.senecacollege.apd_final_project.controller.kiosk.ConfirmationController">
    <center>
        <VBox alignment="CENTER" spacing="10.0" styleClass="content-container" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="10.0"/>
            </padding>
            <BorderPane.margin>
                <Insets bottom="20.0" left="30.0" right="30.0" top="10.0"/>
            </BorderPane.margin>
            <Label styleClass="label-header" text="Booking Confirmed!">
                <font>
                    <Font name="System Bold" size="32.0"/>
                </font>
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
            </Label>
            <Label fx:id="lblReservationId" styleClass="label-subheader" text="Reservation #12345"
                   style="-fx-text-fill: #b491c8; -fx-font-weight: bold;">
                <font>
                    <Font size="22.0"/>
                </font>
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
            </Label>
            <Label styleClass="label-secondary"
                   text="Thank you for choosing Hotel ABC. Your reservation details are below."
                   style="-fx-text-fill: white;">
                <font>
                    <Font size="18.0"/>
                </font>
            </Label>
            <GridPane hgap="20.0" vgap="8.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="150.0" prefWidth="200.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="400.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <VBox.margin>
                    <Insets left="50.0" right="50.0" top="10.0"/>
                </VBox.margin>
                <Label text="Guest Name:" style="-fx-text-fill: white;">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <Label text="Room:" GridPane.rowIndex="1" style="-fx-text-fill: white;">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <Label text="Check-in Date:" GridPane.rowIndex="2" style="-fx-text-fill: white;">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <Label text="Check-out Date:" GridPane.rowIndex="3" style="-fx-text-fill: white;">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <Label text="Number of Nights:" GridPane.rowIndex="4" style="-fx-text-fill: white;">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <Label text="Number of Guests:" GridPane.rowIndex="5" style="-fx-text-fill: white;">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <Label fx:id="lblGuestName" text="John Doe" GridPane.columnIndex="1" style="-fx-text-fill: white;">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <Label fx:id="lblRoomInfo" text="Single Room (Room #101)" GridPane.columnIndex="1"
                       GridPane.rowIndex="1" style="-fx-text-fill: white;">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <Label fx:id="lblCheckIn" text="Monday, April 1, 2025" GridPane.columnIndex="1"
                       GridPane.rowIndex="2" style="-fx-text-fill: white;">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <Label fx:id="lblCheckOut" text="Wednesday, April 3, 2025" GridPane.columnIndex="1"
                       GridPane.rowIndex="3" style="-fx-text-fill: white;">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <Label fx:id="lblNights" text="2" GridPane.columnIndex="1" GridPane.rowIndex="4"
                       style="-fx-text-fill: white;">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <Label fx:id="lblGuests" text="2" GridPane.columnIndex="1" GridPane.rowIndex="5"
                       style="-fx-text-fill: white;">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
            </GridPane>
            <Separator prefWidth="200.0">
                <VBox.margin>
                    <Insets top="10.0"/>
                </VBox.margin>
            </Separator>
            <GridPane hgap="20.0" vgap="8.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="150.0" prefWidth="200.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <VBox.margin>
                    <Insets left="50.0" right="50.0"/>
                </VBox.margin>
                <Label text="Subtotal:" style="-fx-text-fill: white;">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <Label text="Tax (13%):" GridPane.rowIndex="1" style="-fx-text-fill: white;">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <Label text="Total Amount:" GridPane.rowIndex="2"
                       style="-fx-text-fill: white; -fx-font-weight: bold;">
                    <font>
                        <Font name="System Bold" size="16.0"/>
                    </font>
                </Label>
                <Label fx:id="lblSubtotal" text="200.00" GridPane.columnIndex="1" style="-fx-text-fill: white;">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <Label fx:id="lblTax" text="26.00" GridPane.columnIndex="1" GridPane.rowIndex="1"
                       style="-fx-text-fill: white;">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <Label fx:id="lblTotal" styleClass="label-total" text="226.00" GridPane.columnIndex="1"
                       GridPane.rowIndex="2"
                       style="-fx-text-fill: #b491c8; -fx-font-weight: bold;">
                    <font>
                        <Font name="System Bold" size="16.0"/>
                    </font>
                </Label>
            </GridPane>
            <Separator prefWidth="200.0">
                <VBox.margin>
                    <Insets bottom="10.0"/>
                </VBox.margin>
            </Separator>
            <Label styleClass="label-secondary"
                   text="Please visit the front desk for payment information and to complete check-in on your arrival date."
                   style="-fx-text-fill: #e0e0e0;">
                <font>
                    <Font name="System Italic" size="14.0"/>
                </font>
            </Label>
            <HBox alignment="CENTER" spacing="40.0">
                <VBox.margin>
                    <Insets top="10.0"/>
                </VBox.margin>
                <Button fx:id="btnPrint" mnemonicParsing="false" onAction="#handlePrintButton" prefHeight="50.0"
                        prefWidth="200.0" styleClass="button-secondary" text="Print Confirmation">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Button>
                <Button fx:id="btnDone" defaultButton="true" mnemonicParsing="false" onAction="#handleDoneButton"
                        prefHeight="50.0" prefWidth="180.0" styleClass="button" text="Done">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Button>
            </HBox>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" styleClass="bg-dark">
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
            </padding>
            <Label styleClass="label-secondary" text="Thank you for choosing Hotel ABC. We look forward to your stay!"
                   style="-fx-text-fill: #e0e0e0;"/>
        </HBox>
    </bottom>
</BorderPane>