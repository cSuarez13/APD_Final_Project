<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="500.0" styleClass="root"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ca.senecacollege.apd_final_project.controller.admin.LoginController">
    <center>
        <VBox alignment="CENTER" spacing="20.0" styleClass="card">
            <padding>
                <Insets bottom="30.0" left="40.0" right="40.0" top="30.0"/>
            </padding>
            <BorderPane.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </BorderPane.margin>
            <Label styleClass="label-header" text="Admin Login" textFill="#b491c8">
                <font>
                    <Font name="System Bold" size="24.0"/>
                </font>
            </Label>
            <Label styleClass="label-secondary" text="Enter your credentials to access the admin panel"
                   textFill="white">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
            <VBox spacing="10.0">
                <Label text="Username" textFill="white">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <TextField fx:id="txtUsername" promptText="Enter your username"
                           style="-fx-text-fill: white; -fx-background-color: #2a2a2a; -fx-border-color: #7b1fa2; -fx-border-radius: 3;">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </TextField>
            </VBox>
            <VBox spacing="10.0">
                <Label text="Password" textFill="white">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <PasswordField fx:id="txtPassword" promptText="Enter your password"
                               style="-fx-text-fill: white; -fx-background-color: #2a2a2a; -fx-border-color: #7b1fa2; -fx-border-radius: 3;">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </PasswordField>
            </VBox>
            <Button fx:id="btnLogin" defaultButton="true" mnemonicParsing="false" onAction="#handleLoginButton"
                    prefHeight="40.0" prefWidth="200.0" styleClass="button" text="Login"
                    style="-fx-background-color: #7b1fa2; -fx-text-fill: white;">
                <font>
                    <Font size="16.0"/>
                </font>
                <VBox.margin>
                    <Insets top="10.0"/>
                </VBox.margin>
            </Button>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" styleClass="bg-dark">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <Label styleClass="label-secondary" text="This login is for authorized personnel only." textFill="white"/>
        </HBox>
    </bottom>
</BorderPane>