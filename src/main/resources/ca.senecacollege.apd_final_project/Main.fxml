<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane fx:id="mainBorderPane" prefHeight="600.0" prefWidth="800.0" styleClass="root"
            stylesheets="@application.css"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ca.senecacollege.apd_final_project.controller.MainController">
    <center>
        <VBox alignment="CENTER" spacing="20.0" styleClass="card">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <BorderPane.margin>
                <Insets bottom="50.0" left="50.0" right="50.0" top="50.0"/>
            </BorderPane.margin>
            <Label styleClass="label-header" text="Hotel ABC Reservation System">
                <font>
                    <Font name="System Bold" size="36.0"/>
                </font>
            </Label>
            <Label styleClass="label-secondary" text="Select an option to continue">
                <font>
                    <Font size="18.0"/>
                </font>
            </Label>
            <HBox alignment="CENTER" spacing="50.0">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                </padding>
                <Button fx:id="btnKiosk" mnemonicParsing="false" onAction="#handleKioskButton"
                        prefHeight="150.0" prefWidth="200.0"
                        styleClass="btn btn-primary" text="Kiosk Mode">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Button>
                <Button fx:id="btnAdmin" mnemonicParsing="false" onAction="#handleAdminButton"
                        prefHeight="150.0" prefWidth="200.0"
                        styleClass="btn btn-secondary" text="Admin Login">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Button>
            </HBox>
            <HBox alignment="CENTER" spacing="5.0">
                <VBox.margin>
                    <Insets top="10.0" bottom="20.0"/>
                </VBox.margin>
                <Label text="Already stayed with us? Click" style="-fx-text-fill: #e0e0e0;">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <Hyperlink fx:id="lnkFeedback" onAction="#handleFeedbackLink" text="here" styleClass="feedback-link"
                           style="-fx-padding: 0 0 0 0;">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Hyperlink>
                <Label text="to leave feedback." style="-fx-text-fill: #e0e0e0;">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
            </HBox>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" styleClass="bg-dark">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </padding>
            <Label styleClass="label-secondary" text="Â© 2025 Hotel ABC. All Rights Reserved."/>
        </HBox>
    </bottom>
</BorderPane>