<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20.0" styleClass="content-area" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ca.senecacollege.apd_final_project.controller.admin.ReservationController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="filter-bar">
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <children>
                <Label text="Filter:"/>
                <ComboBox fx:id="cmbReservationFilter" prefWidth="150.0"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="btnCancelReservation" mnemonicParsing="false" onAction="#handleCancelReservation"
                        styleClass="button-danger" text="Cancel Selected Reservation"/>
            </children>
        </HBox>
        <TableView fx:id="tblAllReservations" VBox.vgrow="ALWAYS" styleClass="admin-table">
            <VBox.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="10.0"/>
            </VBox.margin>
        </TableView>
    </children>
</VBox>